--- 

const { namn } = Astro.props
const { post } = Astro.props
const { kontakt } = Astro.props;
const { bild } = Astro.props;
const { direction } = Astro.props;

---
<div class={direction + " wrapper"}>
    <img src={bild} alt="en fin bild på en person">
    <div class="txt">
    <p><b>{post}:</b> {namn}</p> 
    <p><b>Kontakt:</b> {kontakt}</p>
    </div>    
</div>

<style>
.wrapper {
    width: 500px;
    margin-top:40px;
    display: flex;
    justify-content: space-between;
    margin-left: 35%;
    padding: 10px;
    border-radius: 20px;
}
.right{
    flex-direction: row;
    background: linear-gradient(119deg, var(--valla-grön) 0%, var(--ovveblues) 100%);
}

.left{
    flex-direction: row-reverse;
    background: linear-gradient(286deg, var(--kiss-efter-för-mycket-öl-gul), var(--finvins-röd));  /*vinkeln = vinkelkn av 360 - (vinkeln av .right - 45)*/
}

.txt{
    line-height: 0.6;
    margin:auto;
}

img{
    width: 200px;
    height: 200px;
}
</style>